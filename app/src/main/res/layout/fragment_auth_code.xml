<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.auth.AuthCodeFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/iv_code"
        android:src="@drawable/code" />


    <TextView
        android:id="@+id/tv_code_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="14dp"
        android:gravity="center_horizontal"
        android:text="Enter in account"
        android:textColor="@color/yellow"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_code_desc" />

    <TextView
        android:id="@+id/tv_code_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="100dp"
        android:gravity="center_horizontal"
        android:text="Set code"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/et_code" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:inputType="phone"
        android:hint="Enter Code"
        android:paddingHorizontal="20dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/btn_enter_acc" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_enter_acc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/yellow"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Continue"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>